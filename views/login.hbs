<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center my-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="post">
        <div class="mb-3">
          <label for="email" class="mb-2" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-2" style="width: 100%">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block mt-2" style="width: 100%">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? 
        <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>

