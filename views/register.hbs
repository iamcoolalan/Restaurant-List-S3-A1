<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center my-3">Register</h1>
      <form action="/users/register" method="post">
        <div class="mb-3">
          <label for="name" class="mb-2" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" value="{{ name }}">
        </div>
        <div class="mb-3">
          <label for="email" class="mb-2" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="{{ email }}">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" value="{{ password }}">
        </div>
        <div class="mb-3">
          <label for="confirmPassword" class="mb-2" class="form-label">Confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Enter your password" value="{{ confirmPassword }}">
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="width: 100%">Register</button>
        <a href="/auth/facebook" class="btn btn-info btn-block mt-2" style="width: 100%">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        Have an Account?
        <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>